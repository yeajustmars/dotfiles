[window]
padding.x = 20
padding.y = 20
{{- if eq .chezmoi.os "darwin" }}
opacity = 1.0
{{- else }}
opacity = 0.93
{{- end }}

[font]
#normal = { family = "FiraCode Nerd Font Mono", style = "Light" }
normal = { family = "FiraCode Nerd Font Mono", style = "Regular" }
bold = { family = "FiraCode Nerd Font Mono", style = "Bold" }

{{- if eq .chezmoi.os "linux" }}
size = 8.6
{{- else }}
size = 12.0
{{- end }}

[font.glyph_offset]
x = 1 # Moves glyphs to the right
y = 1 # Moves glyphs down

